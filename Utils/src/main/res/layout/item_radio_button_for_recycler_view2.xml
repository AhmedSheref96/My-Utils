<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="androidx.core.content.res.ResourcesCompat" />

        <import type="android.content.res.Resources" />

        <variable
            name="itemData"
            type="com.el3asas.utils.recyclerView.RadioItemDataModel" />

        <variable
            name="background"
            type="android.graphics.drawable.Drawable" />

    </data>

    <com.google.android.material.radiobutton.MaterialRadioButton xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@{background}"
        android:buttonTint="@color/radio_item_bg_color"
        android:drawablePadding="@dimen/_3sdp"
        android:focusable="false"
        android:fontFamily="sans-serif"
        android:layoutDirection="ltr"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@{itemData.name}"
        tools:ignore="RtlHardcoded" />

</layout>